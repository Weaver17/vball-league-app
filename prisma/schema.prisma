// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id                 String @id @default(cuid())
  firstName          String
  lastName           String
  email              String @unique
  password           String
  mainPosition       String
  secondPosition     String
  height             String
  level              String
  gender             String
  preferredCourtType String

  teams          Team[]   @relation("PlayerTeams")
  captainOf      Team[]   @relation("TeamCaptain")
  commissionerOf League[] @relation("LeagueCommissioner")
  freeAgentIn    League[] @relation("LeagueFreeAgents")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id          String @id @default(cuid())
  name        String
  level       String
  rosterSpots Int
  playerType  String
  courtType   String

  players       Player[] @relation("PlayerTeams")
  teamCaptain   Player?  @relation("TeamCaptain", fields: [teamCaptainId], references: [id])
  teamCaptainId String?

  league   League? @relation(fields: [leagueId], references: [id])
  leagueId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model League {
  id         String   @id @default(cuid())
  name       String   @unique
  slug       String   @unique
  level      String
  playerType String
  courtType  String
  status     String
  starts     DateTime
  ends       DateTime
  day        String
  teamSlots  Int

  teams          Team[]
  commissioner   Player?  @relation("LeagueCommissioner", fields: [commissionerId], references: [id])
  commissionerId String?
  freeAgents     Player[] @relation("LeagueFreeAgents")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
