// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id                 String   @id @default(cuid())
  firstName          String
  lastName           String
  email              String   @unique
  password           String
  mainPosition       String
  secondPosition     String
  height             String
  level              String
  gender             String
  preferredCourtType String
  teams              Team[]
  commissionerOf     League[]
  captainOf          Team[]   @relation("PlayerCaptainOf")
  captainId          String   @unique @default(cuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Team {
  id            String   @id @default(cuid())
  name          String
  level         String
  openPositions Int
  playerType    String
  courtType     String
  teamCaptain   Player   @relation("PlayerCaptainOf", fields: [teamCaptainId], references: [captainId])
  teamCaptainId String
  league        League   @relation(fields: [leagueId], references: [id])
  leagueId      String
  players       Player[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model League {
  id             String   @id @default(cuid())
  name           String   @unique
  slug           String   @unique
  level          String
  playerType     String
  courtType      String
  status         String
  starts         DateTime
  ends           DateTime
  day            String
  teamSlots      Int
  commissioner   Player   @relation(fields: [commissionerId], references: [id])
  commissionerId String
  teams          Team[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
